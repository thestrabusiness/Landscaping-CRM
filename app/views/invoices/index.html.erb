<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<div class="media">
  <div class="media-body">
    
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Client</th>
          <th>Performed by</th>
          <th>Status</th>
          <th>Note</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.date %></td>
            <td><%= invoice.client.first_name %> <%= invoice.client.last_name %> </td>
            <td><%= invoice.performed_by %></td>
            <td><%= invoice.status %></td>
            <td><%= invoice.note %></td>
            <td><%= link_to 'Show', invoice, class: 'btn btn-mini btn-default' %></td>
            <td><%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', invoice, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

