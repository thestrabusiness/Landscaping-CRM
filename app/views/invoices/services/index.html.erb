<p id="notice"><%= notice %></p>

<h1>Listing Services</h1>

<div class="media">
  <div class="media-body">
    
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Quantity</th>
          <th>Invoice</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @services.each do |service| %>
          <tr>
            <td><%= service.name %></td>
            <td><%= service.category %></td>
            <td><%= service.quantity %></td>
            <td><%= service.invoice %></td>
            <td><%= link_to 'Show', service, class: 'btn btn-mini btn-default' %></td>
            <td><%= link_to 'Edit', edit_service_path(service), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', service, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

