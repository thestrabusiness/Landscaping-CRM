<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<%= link_to 'New Payment', new_payment_path %>

<div class="media">
  <div class="media-body">

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Payment type</th>
      <th>Invoice #</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.date %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.payment_type %></td>
        <td><%= payment.invoice.id %></td>
        <td><%= payment.client.first_name %> <%= payment.client.last_name  %></td>
        <td><%= link_to 'Show', payment, class: 'btn btn-mini btn-default' %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>




