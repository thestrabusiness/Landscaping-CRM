<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @estimate.date %>
</p>

<p>
  <strong>Client:</strong>
  <%= @estimate.client.first_name %> <%= @estimate.client.last_name %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @estimate.notes %>
</p>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Service</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @estimate_items.each do |item| %>
        <tr>
          <td><h4><%= item.name  %></h4></td>
          <td><h4><%= item.quantity %></h4></td>
          <td><h4><%= number_to_currency(item.price) %></h4></td>
          <td><h4><%= number_to_currency(item.price * item.quantity) %> </h4></td> 
          <td><h4><%= link_to "Delete", [@estimate, item], method: :delete, confirm: "Are you sure you want to delete this item?" %></h4></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "Add new item", new_estimate_estimate_item_path(@estimate), class: 'pull-right' %>

<br>

<h4 class='pull-right'> Estimate total: <%= number_to_currency(@estimate.total) %> </h4>

<%= link_to 'Edit', edit_estimate_path(@estimate) %> |
<%= link_to 'Back', estimates_path %> |
<%= link_to 'Generate PDF', view_estimate_pdf_estimate_path(@estimate) %>
