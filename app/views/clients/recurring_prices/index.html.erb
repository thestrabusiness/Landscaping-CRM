<p id="notice"><%= notice %></p>

<h1>Listing Recurring Prices</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Clients</th>
      <th>Recurring services</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recurring_prices.each do |recurring_price| %>
      <tr>
        <td><%= recurring_price.price %></td>
        <td><%= recurring_price.clients %></td>
        <td><%= recurring_price.recurring_services %></td>
        <td><%= link_to 'Show', recurring_price %></td>
        <td><%= link_to 'Edit', edit_recurring_price_path(recurring_price) %></td>
        <td><%= link_to 'Destroy', recurring_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

