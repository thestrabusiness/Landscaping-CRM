<p id="notice"><%= notice %></p>

<div style="width:50%; float:left;">
  <p>
    <strong>First name:</strong>
    <%= @client.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @client.last_name %>
  </p>

  <p>
    <strong>Billing address:</strong>
    <%= @client.billing_address %>
  </p>

  <p>
    <strong>Job address:</strong>
    <%= @client.job_address %>
  </p>

  <p>
    <strong>City:</strong>
    <%= @client.city %>
  </p>

  <p>
    <strong>State:</strong>
    <%= @client.state %>
  </p>

  <p>
    <strong>Zip:</strong>
    <%= "#{client.zip}".rjust(5, '0') %>
  </p>
</div>

<div style="width:50%; height:inherit; float:right;">
  <p>
    <strong>Balance:</strong>
    <%= number_to_currency(@client.balance) %>
  </p>
</div>

<div class="media" style="clear:both;">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><h4>Service</h4></th>
          <th><h4>Price</h4></th>
          <th><h4></h4></th>
        </tr>
      </thead>
      <tbody>
        <% @recurring_prices.each do |item| %>
        <tr>
          <td><h4><%= item.name %></h4></td>
          <td><h4><%= number_to_currency(item.price) %></h4></td>
          <td><h4><%= link_to "Remove Service", [@client, item], class:'btn btn-mini btn-default', method: :delete, confirm: "Are you sure you want to remove this service from the customer?" %></h4></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class='btn-group'>
  <%= link_to 'Edit Client Details', edit_client_path(@client), class: 'btn btn-primary' %> 
  <%= link_to "Add New Service", new_client_recurring_price_path(@client), class: 'btn btn-primary'%> 
  <%= link_to 'Back', clients_path, class: 'btn btn-primary'%>
  </div>

<%= link_to 'Delete Client', @client, method: :delete, class: 'pull-right btn btn-danger', data: { confirm: "This is permanent and can't be reversed. You will lose ALL CLIENT RECORDS! Are you sure?" } %>
