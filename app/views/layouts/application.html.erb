<!DOCTYPE html>
<html>
<head>
  <title>MoffaLandscaping</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'services', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <ul class="nav nav-tabs">
    <% if current_user %>
      <li><%= link_to "Clients", clients_path %></li>
      <li><%= link_to "Invoices", invoices_path %></li>
      <li><%= link_to "Estimates", estimates_path %></li>
      <li><%= link_to "Payments", payments_path %></li>
      <li><%= link_to "Services", recurring_services_path %></li>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
      <% else %>
      <li><%= link_to "Sign In", root_path %> </li>
    <% end %>
    <li style="float:right"><%= link_to "Edit Profile", edit_user_registration_path %> </li>
    <li style="float:right"><%= link_to "Hello, #{current_user.email}!" %> </li>
  </ul> 
</div>

<p class="alert"><%= alert %></p>
  
<%= yield %>

</body>
</html>
